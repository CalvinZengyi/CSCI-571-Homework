<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:shrinkColumns="1"
                android:stretchColumns="0">

                <TableRow android:layout_width="fill_parent">
                    <TextView
                        android:text="Name"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/venue_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="N/A" />
                </TableRow>
                <TableRow android:layout_width="fill_parent">
                    <TextView
                        android:text="Address"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/venue_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="N/A" />
                </TableRow>

                <TableRow android:layout_width="fill_parent">
                    <TextView
                        android:text="City"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/venue_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="N/A" />
                </TableRow>

                <TableRow android:layout_width="fill_parent">
                    <TextView
                        android:text="Phone Number"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/venue_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="N/A" />
                </TableRow>

                <TableRow android:layout_width="fill_parent">
                    <TextView
                        android:text="Open Hours"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/venue_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="N/A" />
                </TableRow>

                <TableRow android:layout_width="fill_parent">
                    <TextView
                        android:text="General Rule"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/venue_grules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="N/A" />
                </TableRow>

                <TableRow android:layout_width="fill_parent">
                    <TextView
                        android:text="Child Rule"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/venue_crules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="N/A" />
                </TableRow>
            </TableLayout>
            <FrameLayout
                android:id="@+id/child_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:layout_span="2"></FrameLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>